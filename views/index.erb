<div class="heading"><br>
  <h2>Let's play Rock Paper Scissors!</h2>
</div>
<div class="hero-text">
  <% if @mode %>
    <form action='/names' method='post'>
      <input type='text' name='player1' placeholder="Player1 name">
      <% if @mode == "2_player" %>
        <input type='text' name='player2' placeholder="Player2 name">
      <% end %>
      <input type="submit" value="START">
    </form>
  <% else %>
    <form action="/mode" method="post">
      <input type="hidden" name="mode" value="1_player">
      <input class="options" type="submit" value="one player">
    </form>  
    <form action="/mode" method="post">
      <input type="hidden" name="mode" value="2_player">
      <input class="options" type="submit" value="two player">
    </form>
  <% end %>
</div>